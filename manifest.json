{
  "manifest_version": 2,
  "name": "Vk Speech2Text",
  "version": "1.0",
  
  "icons": 
  {  
    "128": "images/128.png" 
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "content.js" ]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "https://vk.com/*"
  ],

      "browser_action": {
        "default_title": "Vk Voice2Text",
        "default_icon": "images/128.png",
        "default_popup": "popup.html"
    }
	
}